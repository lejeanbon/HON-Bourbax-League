                    break;
                }
                else
                    $desinscription = '';
            }
            echo '<tr><td>'.$reg->getAccount()->getName().'</td><td>'.$reg->getAccount()->getElo().'</td><td>'.$desinscription.'</td></tr>';
        }
    }
    for($i = $nbPlayers; $i < 11; $i++)
        echo '<tr><td>'.$this->form.'</td></tr>';
