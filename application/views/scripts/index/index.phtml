    if(Zend_Auth::getInstance()->hasIdentity()){
    $identity = Zend_Auth::getInstance()->getIdentity();
    $identifie = App_Facade_Lecture::getInstance()->getUserById($identity->id);
    if(!empty($this->registrations)){
